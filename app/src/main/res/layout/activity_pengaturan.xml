<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.Pengaturan">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/bar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent" >

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            style="@style/Toolbar">

            <ImageButton
                android:id="@+id/action_back"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:src="@drawable/ic_arrow_back_black_24dp" />

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/bar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="top|center_vertical"
            android:orientation="horizontal">

            <Button
                android:layout_width="153dp"
                android:layout_height="wrap_content"
                android:text="Wifi"
                android:id="@+id/button" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Akses point"
                android:id="@+id/wifi"
                android:foregroundGravity="center_vertical|center|center_horizontal"
                android:gravity="top|bottom"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="3.28" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <Button
                android:layout_width="155dp"
                android:layout_height="wrap_content"
                android:text="Bluetooth"
                android:id="@+id/togle_blutooth" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Pilih Bluetoth"
                android:id="@+id/pilhan_bt"
                android:foregroundGravity="center_vertical|center|center_horizontal"
                android:gravity="top|bottom"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="2.05" />

        </LinearLayout>

        <Button
            android:layout_width="153dp"
            android:layout_height="wrap_content"
            android:text="SIMPAN"
            android:id="@+id/simpan_config" />

    </LinearLayout>


</RelativeLayout>
